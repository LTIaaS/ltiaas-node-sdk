{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@client/*": ["client/*"],
      "@resources/*": ["resources/*"],
      "@utils/*": ["utils/*"],
    },
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests", "jest.config.ts"]
}
